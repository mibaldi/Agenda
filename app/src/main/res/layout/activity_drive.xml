<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mikel.agenda.driveActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Si planeas cambiar de móvil puedes exportar tus notas en este dispositivo e importarlas en el otro."
        android:id="@+id/textView24"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="El programa de exportación deja tu base de datos en la carpeta que escojas de Google drive."
        android:id="@+id/textView25"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exportar Base de datos"
        android:id="@+id/exportar"
        android:layout_below="@+id/textView25"
        android:layout_alignLeft="@+id/importar"
        android:layout_alignStart="@+id/importar"
        android:onClick="onClickButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Para importar, selecciona la base de datos de la carpeta escogida en el apartado anterior de tu Google Drive. "
        android:id="@+id/textView26"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/exportar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="¡Ojo! ¡Si importas otra Base de datos  perderás la actual!"
        android:id="@+id/textView27"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffff0600" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importar Base de datos"
        android:id="@+id/importar"
        android:layout_below="@+id/textView27"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButton" />
</RelativeLayout>
